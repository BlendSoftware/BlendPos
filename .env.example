# .env.example — BlendPOS Environment Variables
# Copy to .env for local development
# NEVER commit .env to version control

# ── Server ────────────────────────────────────────────────────────────────────
ENV=development                            # development | production
PORT=8000
DOMAIN=blendpos.tudominio.com              # prod only — needed for Traefik SSL

# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL=postgres://blendpos:blendpos@localhost:5432/blendpos?sslmode=disable
POSTGRES_DB=blendpos
POSTGRES_USER=blendpos
POSTGRES_PASSWORD=blendpos                 # CHANGE IN PRODUCTION

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=                            # empty in dev, set in prod

# ── JWT ───────────────────────────────────────────────────────────────────────
JWT_SECRET=super_secret_key_change_me_in_production_min_32_chars
JWT_EXPIRATION_HOURS=8
JWT_REFRESH_HOURS=24

# Default admin credentials (change on first login!)
# Username: admin   Password: blendpos2026

# ── Worker Pool ───────────────────────────────────────────────────────────────
WORKER_POOL_SIZE=5

# ── AFIP Sidecar ─────────────────────────────────────────────────────────────
AFIP_SIDECAR_URL=http://localhost:8001
AFIP_HOMOLOGACION=true                     # true=testing, false=production
AFIP_CERT_PATH=./afip-sidecar/certs/afip.crt
AFIP_KEY_PATH=./afip-sidecar/certs/afip.key

# ── SMTP (Email) ──────────────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@tuempresa.com
SMTP_PASSWORD=
SMTP_FROM=BlendPOS <noreply@tuempresa.com>

# ── PDF Storage ───────────────────────────────────────────────────────────────
PDF_STORAGE_PATH=./pdf-storage

# ── Let's Encrypt (prod only) ─────────────────────────────────────────────────
ACME_EMAIL=admin@tuempresa.com
