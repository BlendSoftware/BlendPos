# backend/Dockerfile.dev â€” Development image with Air hot reload
FROM golang:1.22-alpine

RUN apk --no-cache add git curl
RUN go install github.com/cosmtrek/air@latest

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

# Air will be invoked by CMD and recompile on file changes
CMD ["air", "-c", ".air.toml"]
